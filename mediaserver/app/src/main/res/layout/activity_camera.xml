<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <!-- 按钮容器 - 垂直布局支持两行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <!-- 第一行按钮：推流、放大、缩小、补光 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start_push"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="开始\n推流"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#FF4444" />

            <Button
                android:id="@+id/btn_scale_big"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="放大"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#4444FF" />

            <Button
                android:id="@+id/btn_scale_small"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="缩小"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#4444FF" />

            <Button
                android:id="@+id/btn_flash"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="补光"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#FFAA44" />

        </LinearLayout>

        <!-- 第二行按钮：开始录制MP4、停止录制MP4、拍照 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_start_record_mp4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="开始录制"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#FF6666" />

            <Button
                android:id="@+id/btn_stop_record_mp4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="停止录制"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#FF9999" />

            <Button
                android:id="@+id/btn_takepic"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="拍照"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:backgroundTint="#44FF44" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="相机预览"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="#80000000"
        android:padding="8dp" />

</RelativeLayout> 